{
    "root": {
        "src": "./src",
        "dist": "./public",
        "watch": "./src",
        "baseDir": "./"
    },
    "tasks": {
        "javascripts": {
            "src": "javascripts",
            "dist": "javascripts",
            "watch": "javascripts/**/*.js",
            "entries": {
                "home_new": "./home_new.js"
            },
            "publicPath": "http://storage.gloria-jeans.ru/prod/"
        },
        "stylesheets": {
            "src": "stylesheets/*.scss",
            "dist": "stylesheets",
            "watch": "stylesheets/**/*.*"
        },
        "images": {
            "src": "images/**/*.*",
            "dist": "images",
            "watch": "images/**/*.*"
        },
        "icons": {
            "src": "font-svg/*.*",
            "dist": "fonts",
            "watch": "font-svg/*.*",
            "template": "src/font-svg.template",
            "core": "src/stylesheets/main/"
        },
        "spriteSvg": {
            "src": "sprite-svg/*.*",
            "dist": "images",
            "watch": "sprite-svg/*.*",
            "template": "src/sprite-svg.template",
            "core": "src/stylesheets/core/"
        },
        "spritePng": {
            "src": "sprite-png/*.*",
            "dist": "images",
            "watch": "sprite-png/*.*",
            "template": "src/sprite-png.template",
            "core": "src/stylesheets/core/"
        },
        "fonts": {
            "src": "fonts/**/*.*",
            "dist": "fonts",
            "watch": "fonts/**/*.*"
        }
    },
    "mapping": "../{env}.mapping.json"
}